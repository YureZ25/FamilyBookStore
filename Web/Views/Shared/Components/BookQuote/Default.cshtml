@model BookQuoteComponentVM

<div class="list-group">
    @foreach (var quote in Model.BookQuotes)
    {
        <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <h5>@quote.Text</h5>
            <small>стр. @quote.Page</small>
        </button>
    }
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQuoteModal">Добавить цитату</button>

<div class="modal fade" id="addQuoteModal" tabindex="-1" role="dialog" aria-labelledby="addQuoteModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="addQuoteModalForm">
                <div class="modal-header">
                    <h5 class="modal-title">Добавление цитаты</h5>
                </div>
                <div class="modal-body">
                    <input asp-for="BookQuotePost.BookId" type="hidden" value="@Model.BookId" />
                    <div class="mb-3">
                        <label asp-for="BookQuotePost.Page" class="col-form-label">Страница:</label>
                        <input asp-for="BookQuotePost.Page" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="BookQuotePost.Text" class="col-form-label">Цитата:</label>
                        <textarea asp-for="BookQuotePost.Text" class="form-control"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" form="addQuoteModalForm" class="btn btn-primary">Добавить цитату</button>
                </div>
            </form>
        </div>
    </div>
</div>
