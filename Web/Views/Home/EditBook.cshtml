@model BookVM

<h3>Страница изменения данных книги</h3>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="@Model.Id" />

    <label>Название книги:</label>
    <input type="text" asp-for="@Model.Title" />

    <button>Изменить</button>
</form>

<a asp-action="Index">Вернуться к списку книг</a>